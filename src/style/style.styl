body
 margin: 0
 padding: 0
 background: #EEE
 font-size: 13px

.container

  &__inner
    height: 100vh
    overflow: hidden
    display: flex
    align-items: center
    flex-direction: column
    flex-flow: column wrap;
    overflow-x: scroll

    justify-content: flex-start
    flex-flow: column wrap
    align-content: flex-start

.box
  position: relative

  &__image
    max-height: 100%
    max-width: 100%

  &__inner
   max-height: 100%
   overflow: hidden
