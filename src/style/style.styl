body
 margin: 0
 padding: 0
 background: #EEE
 color: #808080
 font-size: 14px
 font-family: Arial

.container

  &__inner
    overflow: hidden

  .box
    float: left
    position: relative
    width: 100%

    @media only screen and (min-width : 250px)
      width: 50%

    @media only screen and (min-width : 500px)
      width: 33.3333%

    @media only screen and (min-width : 750px)
      width: 25%

    @media only screen and (min-width : 1000px)
      width: 20%

    @media only screen and (min-width : 1266px)
      width: 16.666666%

    @media only screen and (min-width : 1500px)
      width: 14.2857%

    @media only screen and (min-width : 1700px)
      width: 12.5%

    @media only screen and (min-width : 1985px)
      width: 11.111111%

    &__image
      display: block
      max-height: 100%
      max-width: 100%
      width: 100%
      height: 100%

  &__inner
   max-height: 100%
   overflow: hidden


.header
  position: fixed
  left: 0
  right: 0
  top: 0
  z-index: 1

  &__logo
    display: block

  &__logo-container
    background: none
    float: left
    width: 298px
    overflow: hidden
    position: relative

  &__info
    position: absolute
    left: 23px
    top: 33px

  &__filter
    background: #fff
    padding: 18px 5px
    text-align: right
    box-sizing: border-box
    float: left
    width: calc(100% - 298px)
    height: 68px
    overflow: hidden

.form-group
  padding: 0 10px
  display: inline-block
  width: 10%

  &_reset
  &_link
    text-align: left
    width: 13%

  &_link
    width: 10%

  &__reset,
  &__link
    font-size: 1rem
    cursor: pointer
    line-height: 32px
    border-bottom: 1px #808080 dashed

  &__select
    max-width: 100%
    width: 100%
    height: 2rem
    display: block
    padding: 0.2rem 0.5rem
    font-size: 1rem
    line-height: 1.25
    color: #55595c
    background-color: #fff
    background-image: none
    background-clip: padding-box
    border: 1px solid rgba(0, 0, 0, 0.15)
    border-radius: 0.25rem

.modal
  position: absolute
  left: 50%
  top: 50%
  transform: translate(-50%, -50%)
  background: #fff
  max-width: 300px
  border-radius: 12px
  font-size: 1rem
  line-height: 22px
  text-align: center

  &__inner
    position: relative
    padding: 10px 20px

  &__close
    position: absolute
    top: 10px
    right: 10px
    font-size: 22px
    cursor: pointer

  &__link
    white-space: nowrap
