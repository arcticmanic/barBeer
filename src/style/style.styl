body
 margin: 0
 padding: 0
 background: #EEE
 font-size: 13px

.wrap
 overflow: hidden
 margin: 10px

.box
  float: left
  position: relative
  width: 20%
  padding-bottom: 20%

  @media only screen and (max-width : 360px)
      width: 100%;
      padding-bottom: 100%;

   @media only screen and (max-width : 650px) and (min-width : 361px)
      width: 50%;
      padding-bottom: 50%;

   @media only screen and (max-width : 1050px) and (min-width : 651px)
      width: 33.3%;
      padding-bottom: 33.3%;

    @media only screen and (max-width : 1290px) and (min-width : 1051px)
      width: 25%;
      padding-bottom: 25%;


    &__image
      width: 100%

    &__inner
     position: absolute
     left: 10px
     right: 10px
     top: 10px
     bottom: 10px
     overflow: hidden
