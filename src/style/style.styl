body
 margin: 0
 padding: 0
 background: #EEE
 color: #808080
 font-size: 14px
 font-family: Arial;

.container

  &__inner
    overflow: hidden

  .box
    float: left
    position: relative
    width: 20%

    @media only screen and (max-width : 480px)
      width: 100%
      padding-bottom: 100%

     @media only screen and (max-width : 650px) and (min-width : 481px)
       width: 50%
       padding-bottom: 50%

     @media only screen and (max-width : 1050px) and (min-width : 651px)
       width: 33.3%
       padding-bottom: 33.3%

     @media only screen and (max-width : 1290px) and (min-width : 1051px)
       width: 25%
       padding-bottom: 25%

    &__image
      display: block
      max-height: 100%
      max-width: 100%
      width: 100%
      height: 100%

  &__inner
   max-height: 100%
   overflow: hidden


.header
  position: fixed
  left: 0
  right: 0
  top: 0
  z-index: 1

  &__logo-container
    background: none
    float: left
    width: 320px
    position: relative

  &__info
    position: absolute
    left: 23px
    top: 33px

  &__filter
    background: #fff
    padding: 18px 0
    float: left
    width: calc(100% - 320px)

.form-group
  padding: 0 10px
  float: left
  width: 11%

  &_reset
    width: 15%

  &__reset
    font-size: 1rem
    cursor: pointer
    line-height: 32px
    border-bottom: 1px #808080 dashed

  &__select
    max-width: 100%
    width: 100%
    height: 2rem
    display: block
    padding: 0.5rem 0.85rem
    font-size: 1rem
    line-height: 1.25
    color: #55595c
    background-color: #fff
    background-image: none
    background-clip: padding-box
    border: 1px solid rgba(0, 0, 0, 0.15)
    border-radius: 0.25rem
