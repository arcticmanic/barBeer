body
 margin: 0
 padding: 0
 background: #EEE
 font-size: 13px

.container

  &__inner
    overflow: hidden

  .box
    float: left
    position: relative
    width: 20%

    @media only screen and (max-width : 480px)
      width: 100%
      padding-bottom: 100%

     @media only screen and (max-width : 650px) and (min-width : 481px)
       width: 50%
       padding-bottom: 50%

     @media only screen and (max-width : 1050px) and (min-width : 651px)
       width: 33.3%
       padding-bottom: 33.3%

     @media only screen and (max-width : 1290px) and (min-width : 1051px)
       width: 25%
       padding-bottom: 25%

    &__image
      display: block
      max-height: 100%
      max-width: 100%
      width: 100%
      height: 100%

  &__inner
   max-height: 100%
   overflow: hidden


.header
  position: fixed
  left: 0
  right: 0
  top: 0
  z-index: 1

  &__logo-container
    background: none
    float: left
    width: 320px

  &__filter
    background: #fff
    height: 68px
    float: left
    width: calc(100% - 320px)
